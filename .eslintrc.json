{
  "root": true,
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react-redux"
  ],
  "extends": [
    "airbnb-base",
    "airbnb/rules/react",
    "airbnb/hooks",
    "plugin:react-redux/recommended"
  ],
  "rules": {
    "semi": [2, "never"],
    "comma-dangle": [2, "never"],
    "max-len": 0,
    "radix": 0,
    "global-require": 0,
    "prefer-object-spread": 0,
    "object-curly-newline": 0,
    "import/no-extraneous-dependencies": 0,
    "react/jsx-props-no-spreading": 0,
    "react/destructuring-assignment": 0,
    "react/prefer-stateless-function": 0,
    "react/prop-types": 0 
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": {
      "alias": {
        "map": [
          ["@", "./src"]
        ],
        "extensions": [".js", ".jsx"]
      }
    }
  }
}